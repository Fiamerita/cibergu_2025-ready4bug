<SplashScreen>:
    name: "splash"
    MDBoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 40
        pos_hint: {"center_y": 0.5}
        MDLabel:
            text: "Ready4Bug"
            halign: "center"
            font_style: "H3"
            theme_text_color: "Custom"
            text_color: 0.2, 0.6, 0.9, 1
        Image:
            source: "ready4bug_logo.png"
            size_hint_y: 0.6
        MDLabel:
            text: "Secure QR Access"
            halign: "center"
            theme_text_color: "Secondary"

<LoginScreen>:
    name: "login"
    MDBoxLayout:
        orientation: "vertical"
        padding: 40
        spacing: 20
        MDLabel:
            text: "Inicio de Sesión"
            halign: "center"
            font_style: "H4"

        MDTextField:
            id: usuario
            hint_text: "Usuario"
            icon_right: "account"
            mode: "rectangle"

        MDTextField:
            id: contraseña
            hint_text: "Contraseña"
            icon_right: "lock"
            password: True
            mode: "rectangle"

        MDLabel:
            id: msg
            text: ""
            halign: "center"
            theme_text_color: "Error"

        MDRaisedButton:
            text: "Iniciar sesión"
            pos_hint: {"center_x": 0.5}
            on_release: root.login()

<QRScreen>:
    name: "qr"
    MDBoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 30
        MDLabel:
            text: "Escanea el código QR"
            halign: "center"
            font_style: "H5"
        Image:
            id: qr
            source: ""
            size_hint_y: 0.8
        MDRaisedButton:
            text: "Volver"
            pos_hint: {"center_x": 0.5}
            on_release: root.volver_login()
